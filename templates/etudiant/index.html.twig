{% extends 'base.html.twig' %}

{% block title %}Etudiant index{% endblock %}

{% block body %}
    <h1>Etudiant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Login</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Reseaux_sociaux</th>
                <th>Telephone</th>
                <th>Fixe</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Prenom</th>
                <th>NCE</th>
                <th>Niveau</th>
                <th>Institut</th>
                <th>Date_naissance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.login }}</td>
                <td>{{ etudiant.roles ? etudiant.roles|json_encode : '' }}</td>
                <td>{{ etudiant.password }}</td>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.description }}</td>
                <td>{{ etudiant.reseauxSociaux }}</td>
                <td>{{ etudiant.telephone }}</td>
                <td>{{ etudiant.fixe }}</td>
                <td>{{ etudiant.adresse }}</td>
                <td>{{ etudiant.email }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td>{{ etudiant.NCE }}</td>
                <td>{{ etudiant.niveau }}</td>
                <td>{{ etudiant.institut }}</td>
                <td>{{ etudiant.dateNaissance ? etudiant.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_etudiant_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_etudiant_new') }}">Create new</a>
{% endblock %}
