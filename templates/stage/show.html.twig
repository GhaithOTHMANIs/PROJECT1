{% extends 'base.html.twig' %}

{% block title %}Stage{% endblock %}
{% block stylesheets %}
    <style>
    /* public/css/custom.css */
body {
    background-color: #f5f5f5;
    font-family: Arial, sans-serif;
}

h1 {
    color: #333;
    text-align: center;
    margin-top: 20px;
}

.table {
    width: 80%;
    margin: 20px auto;
    border-collapse: collapse;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.table th, .table td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

.table th {
    background-color: #f0f0f0;
}

.table tr:hover {
    background-color: #f9f9f9;
}

a {
    display: inline-block;
    margin: 10px;
    padding: 10px 15px;
    color: #fff;
    background-color: #007bff;
    border-radius: 5px;
    text-decoration: none;
}

a:hover {
    background-color: #0056b3;
}
    </style>
{% endblock %}
{% block body %}
    <h1>Stage {{ stage.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stage.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ stage.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ stage.description }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ stage.dateDebut ? stage.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ stage.dateFin ? stage.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_stage_index') }}">back to list</a>
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_stage_edit', {'id': stage.id}) }}">edit</a>
{% endif %}
    {{ include('stage/_delete_form.html.twig') }}
{% endblock %}
